<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark2</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorSlightDark">@color/colorPrimary</item>
        <item name="android:textColor">@color/offWhite</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorDanger">@color/red</item>
        <item name="white">@color/white</item>

        <!-- Toolbar -->
        <item name="actionMenuTextColor">@color/white</item>
        <item name="actionBarItemBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:colorControlNormal">@color/colorAccent</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/colorPrimaryDark2</item>
        <item name="android:windowLightStatusBar">false</item>

    </style>

    <style name="LightAppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/offWhite</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorSlightDark">@color/white</item>
        <item name="android:textColor">@color/colorPrimaryDark2</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorDanger">@color/red</item>
        <item name="white">@color/white</item>

        <!-- Toolbar -->
        <item name="actionMenuTextColor">@color/black</item>
        <item name="actionBarItemBackground">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:actionMenuTextColor">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:colorControlNormal">@color/colorAccent</item>

        <!-- Status Bar -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>

    </style>

    <style name="SignInUpTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/logInPrimary</item>
        <item name="colorPrimaryDark">@color/logInPrimaryDark</item>
        <item name="colorAccent">@color/logInAccent</item>

        <item name="android:background">@color/logInPrimary</item>

        <item name="android:textColor">@color/white</item>
        <item name="colorControlNormal">@color/offWhite</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/offWhite</item>

        <item name="colorButtonNormal">@color/logInPrimaryDark</item>
        <item name="android:colorButtonNormal">@color/logInPrimaryDark</item>
    </style>


    <style name="SheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <!--
    <style name="ToolbarColor" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionMenuTextColor">@color/white</item>
        <item name="actionOverflowMenuStyle">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>
    -->

</resources>
