<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?selectableItemBackground">

    <android.support.v7.widget.CardView
        android:id="@+id/album_compact_cardView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="15dp"
        android:layout_margin="5dp"
        android:elevation="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">
        <ImageView
            android:id="@+id/album_compact_imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/album_compact_textView"
        android:layout_margin="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/album_compact_cardView"
        android:layout_alignParentTop="true"
        />

    <ImageButton
        android:id="@+id/album_compact_options_button"
        android:layout_marginEnd="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/album_compact_cardView"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_more_filled"
        android:background="@null"
        />
    <ImageButton
        android:id="@+id/album_compact_favorite_button"
        android:layout_marginEnd="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/album_compact_cardView"
        android:layout_toStartOf="@id/album_compact_options_button"
        android:src="@drawable/ic_heart"
        android:background="@null"
        />


</RelativeLayout>